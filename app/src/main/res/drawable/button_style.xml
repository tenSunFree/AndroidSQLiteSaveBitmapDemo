<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#9ba747"
                android:endColor="#d9dcd8"
                android:startColor="#d9dcd8"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#8b281f"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="2dp"
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#9ba747"
                android:endColor="#d9dcd8"
                android:startColor="#d9dcd8"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#8b281f"/>
            <corners
                android:radius="8dp"/>
            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="10dp"
                android:top="2dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#708b281f"/>
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="-90"
                android:centerColor="#709ba747"
                android:endColor="#70d9dcd8"
                android:startColor="#70d9dcd8"
                android:type="linear"/>
            <padding
                android:bottom="2dp"
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"/>
        </shape>
    </item>
</selector>